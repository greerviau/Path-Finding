<project>

    <target name="clean">
        <delete dir="build"/>
    </target>

    <target name="compile">
        <mkdir dir="build/classes"/>
        <javac srcdir="source" destdir="build/classes"/>
    </target>

    <target name="jar">
      <mkdir dir="build/jar"/>
        <jar destfile="build/jar/PathFinding.jar" basedir="build/classes">
          <manifest>
            <attribute name="Main-Class" value="PathFinding"/>
          </manifest>
        </jar>
    </target>

    <target name="run">
        <java jar="build/jar/PathFinding.jar" fork="true"/>
    </target>

</project>
